<%- include('../templates/head'); -%>
<%- include('../templates/sidebar', {view: 'Situations' }); -%>
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
	<!-- Navbar -->
	<%- include('../templates/navbar', {breadcrumbs: 'Create situation' }); -%>
	<!-- End Navbar -->
	<div class="container-fluid py-4">
		<div class="row">
			<div class="col-12">
				<div class="card my-4">
					<div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
						<div
							class="d-flex justify-content-lg-between bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
							<h6 class="text-white text-capitalize ps-3">Create situation</h6>
						</div>
					</div>
					<div class="card-body px-0 pb-2">
						<div class="card card-plain">
							<div class="card-header">
								<h4 class="font-weight-bolder">Fill in situation data</h4>
							</div>
							<div class="card-body">
								<form role="form" action="/situation" method="POST">
									
                                    <div class="input-group input-group-outline mb-3">
										<label class="form-label" ></label>
										<textarea rows="7" type="text" class="form-control" name="question" placeholder="Question"></textarea>
									</div>

									  <p class="d-inline-flex gap-1">
					
										<button onclick="answerToggle()" class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
										  Create answers
										</button>
									  </p>
									  <div class="collapse" id="collapseExample">
											<div class="input-group input-group-outline mb-3">
												<label class="form-label">Answer 1</label>
												<input id="answer1" type="text" class="form-control" name="answer1">
												
											</div>
											<div class="input-group input-group-outline mb-3">
												<label class="form-label">Answer 2</label>
												<input id="answer2" type="text" class="form-control" name="answer2">
												
											</div>
											<div class="input-group input-group-outline mb-3">
												<label class="form-label">Answer 3</label>
												<input id="answer3" type="text" class="form-control" name="answer3">
												
											</div>
											<label class="form-label">Select correct answer</label>
											<div class="form-check form-check-inline">
												<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="0">
												<label class="form-check-label" for="inlineRadio1">1</label>
											  </div>
											  <div class="form-check form-check-inline">
												<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="1">
												<label class="form-check-label" for="inlineRadio2">2</label>
											  </div>
											  <div class="form-check form-check-inline">
												<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="2">
												<label class="form-check-label" for="inlineRadio3">3 </label>
											  </div>
									  </div>
                                      <select class="form-control  mb-3 border p-2" aria-label="Topic" name="topicId">
										<option disabled selected >Select topic</option>
										<% topicsList.forEach(function(topic) { %>
											<option value="<%= topic.id %>"><%= topic.title %></option>
											<% }); %>
									  </select>
									  <div class="input-group input-group-outline mb-3">
										<label class="form-label" ></label>
										<textarea rows="7" type="text" class="form-control" name="wrongAnswerDescription" placeholder="Wrong answer description"></textarea>
									</div>
									<div class="text-center">
										<button
											class="btn btn-lg bg-gradient-primary btn-lg w-25 mt-4 mb-0">SAVE</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<%- include('../templates/footer'); -%>
	</div>
	<%- include('../templates/messages'); -%>
</main>

<%- include('../templates/scripts'); -%>
<script>
	function answerToggle(){
		const Element = document.getElementById('answer')
		Element.toggleAttribute('disabled')
		Element.setAttribute('value','')
		
	}
</script>