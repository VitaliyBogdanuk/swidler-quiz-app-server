<%- include('../templates/head'); -%>
<%- include('../templates/sidebar', {view: 'Answers' }); -%>
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <%- include('../templates/navbar', {breadcrumbs: 'Answers' }); -%>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="d-flex justify-content-lg-between bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">Answers</h6>
                            <a href="/forms/answer" class="text-white px-3"><i class="fa fa-plus p-1"></i>Add answer</a>
                        </div>
                    </div>
                    <div class="card-body px-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th
                                            class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                            Id</th>
                                        <th
                                            class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                            Text</th>

                                        <th
                                            class="text-center text-secondary text-secondary text-xxs font-weight-bolder opacity-7">
                                            Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% answersList.forEach(function(answer) { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">
                                                            <%= answer.id %>
                                                        </h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">
                                                    <%= answer.text.length > 50 ? answer.text.substring(0, 50) + '...' : answer.text %>
                                                </p>
                                            </td>
                                            <td class="align-middle text-center">
                                                <a href="/answer/<%= answer.id %>"
                                                    class="text-secondary font-weight-bold text-xs"
                                                    data-toggle="tooltip" data-original-title="View answer">
                                                    <i class="fa fa-search p-1"></i>
                                                </a>
                                                <a href="javascript:;"
                                                    class="text-secondary font-weight-bold text-xs"
                                                    data-toggle="tooltip" data-original-title="Edit answer">
                                                    <i class="fa fa-pencil p-1"></i>
                                                </a>
                                                <a href="javascript:;"
                                                    class="text-secondary font-weight-bold text-xs delete-answer"
                                                    data-toggle="tooltip" 
                                                    data-original-title="Delete answer" 
                                                    onclick='deleteAchievement( "<%= answer.id %>" )'>
                                                    <i class="fa fa-trash p-1"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../templates/footer'); -%>
    </div>
    <%- include('../templates/messages'); -%>
</main>

<%- include('../templates/scripts'); -%>

<script>
    window.history.pushState({}, '', '/tables/answers');
</script>
