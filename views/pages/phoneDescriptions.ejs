<%- include('../templates/head'); -%>
<%- include('../templates/sidebar', {view: 'Phone descriptions' }); -%>
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <%- include('../templates/navbar', {breadcrumbs: 'Phone descriptions' }); -%>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="d-flex justify-content-lg-between bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">Descriptions</h6>
                
                        </div>
                    </div>
                    <div class="card-body px-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th
                                            class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                            Id</th>
                                        <th
                                            class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                            Cheater Phone</th>
                                        <th
                                            class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                            Description</th>
                                        <th
                                            class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                            Approve</th>

                                        <th
                                            class="text-center text-secondary text-secondary text-xxs font-weight-bolder opacity-7">
                                            Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% phoneDescriptionsList.forEach(function(phoneDescription) { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">
                                                            <%= phoneDescription.id %>
                                                        </h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">
                                                            <%= phoneDescription.cheaterPhone.phone %>
                                                        </h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">
                                                    <%= phoneDescription.description.length > 50 ? phoneDescription.description.substring(0, 50) + '...' : phoneDescription.description %>
                                                </p>
                                            </td>
                                            <td>
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                                                  </div>
                                            </td>
                                            <td class="align-middle text-center">
                                               <a href="/views/evidence/?id=<%= phoneDescription.id %>"
                                                    class="text-secondary font-weight-bold text-xs"
                                                    data-toggle="tooltip" data-original-title="View situation">
                                                    <i class="fa fa-search p-1"></i>
                                                </a>
                                                <!--<a href=""
                                                    class="text-secondary font-weight-bold text-xs"
                                                    data-toggle="tooltip" data-original-title="Edit situation">
                                                    <i class="fa fa-pencil p-1"></i>
                                                </a>-->
                                                <a href="javascript:;"
                                                    class="text-secondary font-weight-bold text-xs delete-situation"
                                                    data-toggle="tooltip" 
                                                    data-original-title="Delete situation" 
                                                    onclick='deleteDescription( "<%= phoneDescription.id %>" )'>
                                                    <i class="fa fa-trash p-1"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../templates/footer'); -%>
    </div>
    <%- include('../templates/messages'); -%>
</main>

<script>
    function deleteDescription(descriptionId) {
        fetch('/situation/' + situationId, {
            method: 'DELETE',
        }).then(function(response) {
            if (response.ok) {
                displayToast('success', 'Situation and its answers deleted');
                location.reload();
            } else {
                console.error('An error occurred');
            }
        }).catch(function(error) {
            console.error('An error occurred', error);
        });
    }

    window.history.pushState({}, '', '/tables/situations');

</script>

<%- include('../templates/scripts'); -%>